<!DOCTYPE hibernate-mapping
        PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.sakaiproject.attendance.model">

    <class name="StatusRecord" table="ATTENDANCE_STATUS_RECORD_T">

        <id name="id">
            <column name="ID" not-null="true" length="19" />
            <generator class="native">
                <param name="sequence">ATTENDANCE_STATUS_RECORD_S</param>
            </generator>
        </id>

        <property name="userID"     column="USER_ID"            type="java.lang.String" />
        <property name="status"     column="STATUS"             type="org.sakaiproject.attendance.hbm.StatusUserType"/>

        <many-to-one name="event" column="ATTENDANCE_EVENT" unique="false" not-null="true" class="org.sakaiproject.attendance.model.Event" />
    </class>

    <query name="getStatus">
        <![CDATA[from StatusRecord sR WHERE sR.id = :id]]>
    </query>

    <query name="getStatusForUser">
        <![CDATA[from StatusRecord sR WHERE sR.userID = :userID]]>
    </query>

    <query name="getStatusForEvent">
        <![CDATA[from StatusRecord sR WHERE sR.event = :event]]>
    </query>
</hibernate-mapping>